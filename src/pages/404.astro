---
import Layout from '@/layouts/Layout.astro'
import { Image } from 'astro:assets'
import NotFound404Image from '@/images/404.svg'
---

<Layout title="404 Page Not Found" showNewsletter={false}>
  <main>
    <section class="mx-auto max-w-3xl py-16 mt-24 px-4 xl:px-0">
      <h2 class="text-4xl font-bold dark:text-gray-100">Page Not Found</h2>

      <div class="mt-12">
        <Image src={NotFound404Image} alt="404" />
      </div>

      <div class="mt-12">
        <a
          href="/"
          class="bg-indigo-700 hover:bg-indigo-900 focus:bg-indigo-900 text-white text-sm font-semibold tracking-wide uppercase shadow-sm rounded-sm cursor-pointer px-6 py-3"
        >
          Go Home
        </a>
      </div>
    </section>
  </main>
</Layout>
